<?xml version="1.0" encoding="utf-8" ?>
<!-- this is a data node for settings different ways the game will play out --> 
<component name="GameSettingsNode" extends="Node">
    <interface>
        <!-- non random levels -->
        <!-- string with comma separated values creator,first possible occurence, second -->
        <field id="big_room" type="string" value="BG_LevelCreator,4,6" />
        <!-- tiles are squares -->
        <field id="tileset" type="string" value="tileset_default" />
        <field id="tile_size" type="integer" value="40" />
        <field id="room_min_width" type="integer" value="6" />
        <field id="room_min_height" type="integer" value="4" />
        <field id="room_max_width" type="integer" value="16" />
        <field id="room_max_height" type="integer" value="6" />
	</interface> 
</component>


